
.marker-form

  = form_for @marker do |f|
    = f.hidden_field :map_id, value: (params['map_id']||@map_id)

    - if @marker.errors.any?
      #error_explanation
        %p= "#{pluralize(@marker.errors.count, "error")} prohibited this map from being saved:"
        %ul.errors
          - @marker.errors.full_messages.each do |message|
            %li= message

    .field
      = f.label :slug
      = f.text_field :slug
    .field
      = f.label :w
      = f.number_field :w
    .field
      = f.label :h
      = f.number_field :h
    .field
      = f.label :x
      = f.number_field :x
    .field
      = f.label :y
      = f.number_field :y
    .field
      = f.label :description
      = f.text_field :description
    .field
      = f.label :img_path
      = f.text_field :img_path
    .actions
      = f.submit 'Save'
