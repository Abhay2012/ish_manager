- venues = venues.page( params[:venues_page] ).per( 10 )
- if params[:venue_searchq]
  - venues = venues.where({ :name => /#{params[:venue_searchq]}/i })
- if venues.respond_to? :total_pages
  = paginate venues, :param_name => :venues_page, :views_prefix => 'ish_manager'
%ol
  - venues.each do |venue|
    %li
      = link_to '[~]', edit_venue_path(venue)
      = button_to '[x]', venue_path(venue), :method => 'delete', :data => { :confirm => 'Are you sure?' }
      = link_to venue.name, venue_path(venue)
      %br
      %br
      .clearfix
- if venues.respond_to? :total_pages
  = paginate venues, :param_name => :venues_page, :views_prefix => 'ish_manager'