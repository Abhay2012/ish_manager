
= form_for @map do |f|
  - if @map.errors.any?
    #error_explanation
      %h2= "#{pluralize(@map.errors.count, "error")} prohibited this map from being saved:"
      %ul
        - @map.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :slug
    = f.text_field :slug
  .field
    = f.label :w
    = f.number_field :w
  .field
    = f.label :h
    = f.number_field :h
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :img_path
    = f.text_field :img_path
  .row
    .col-md-4
      .field
        = f.label :ordering_type
        = select_tag :ordering_type, options_for_select(::Gameui::Map::ORDERING_TYPES)
  .actions
    = f.submit 'Save'
