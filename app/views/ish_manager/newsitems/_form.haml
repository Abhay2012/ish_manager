
= form_for newsitem, :html => { :multipart => true } do |f|
  - if @site
    = hidden_field_tag :site_id, @site.id
  - elsif @city
    = hidden_field_tag :city_id, @city.id
  - else
    = f.label :site
    = f.select :site_id, options_for_select( @sites )
    %br
    = f.label :city
    = f.select :city_id, options_for_select( @cities )
  
  .a
    = f.label :name
    = f.text_field :name
  .a
    = f.label :descr
    = f.text_area :descr, :class => :tinymce
  .a
    = f.label :video
    = f.select :video_id, options_for_select( @videos_list )
  .a
    = f.label :gallery
    = f.select :gallery_id, options_for_select( @galleries_list )
  .a
    = f.label :report
    = f.select :report_id, options_for_select( @reports_list )
  .a
    = label_tag :photo
    = file_field_tag :photo
  .a
    = f.submit :submit
  
